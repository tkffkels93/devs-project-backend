{{> admin/layout/header}}
<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/sidebar}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link"><a href="/admin/users">회원</a></li>
                    <li class="tab-link current"><a href="/admin/boards">게시글</a></li>
                </ul>
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>게시글 목록</p>
                    </div>
                    <div class="tab-item">
                        <form action="/admin/users" method="get" style="width: 100%;">
                            <ul class="search-box">
                                <li class="search-left">
                                    <span>총 게시글 <em>{{boardListDTO.totalBoardCount}}</em> 개</span>
                                </li>
                                <li class="search-right">
                                    <div>
                                        <div class="tab-input-wrapper">
                                            <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                                            <input class="submit-btn" type="submit" value="Search">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                        <table>
                            <colgroup>
                                <col width="15%">
                                <col width="35%">
                                <col width="15%">
                                <col width="20%">
                                <col width="10%">
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">닉네임</th>
                                <th scope="col">제목</th>
                                <th scope="col">게시글 상태</th>
                                <th scope="col">마지막 수정일</th>
                                <th scope="col">상세보기</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#boardListDTO.boardList}}
                                <tr>
                                    <td>{{nickname}}</td>
                                    <td>{{title}}</td>
                                    <td class="board-content-text">{{status}}</td>
                                    <td>{{updatedAt}}</td>
                                    <td><span class="detail"
                                              onclick="location.href='/admin/boards/{{id}}'">상세보기</span>
                                    </td>
                                </tr>
                            {{/boardListDTO.boardList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
</body>

</html>